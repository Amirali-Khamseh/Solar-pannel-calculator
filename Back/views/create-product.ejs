<%- include('./partials/head') %>


    <body>
        <%- include('./partials/dashboard-nav') %>

            <div class="container-fluid big-container ">
                <div class="row content-container">
                    <div id="map">

                    </div>
                    <form action="/products/create/<%= projectId%>" method="POST" class="text-white">
                        <div class="form-group">
                            <label for="exampleFormControlSelect2">Orientation of the panel</label>
                            <select class="form-control" id="exampleFormControlSelect2" name="orientation" required>
                                <option value="N">North</option>
                                <option value="E">East</option>
                                <option value="S">South</option>
                                <option value="W">West</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlSelect">Power peak</label>
                            <select class="form-control" id="exampleFormControlSelect" name="powerPeak" required>
                                <option value="440">440 Watt peak</option>
                                <option value="580">580 Watt peak</option>
                                <option value="630">630 Watt peak</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="pi_input">Inclination degree</label>
                            <input id="pi_input" type="range" min="0" max="90" step="0.1" name="inclination" required>
                            <p>Value: <output id="value"></output>&deg;</p>
                        </div>
                        <div class="form-group">
                            <label for="area">Area occupied by panel</label>
                            <input type="number" placeholder="Units in square meter" id="area" required name="area">
                        </div>
                        <div class="form-group">
                            <input type="hidden" value="active" name="status">
                        </div>
                        <div class="form-group">
                            <input type="hidden" name="projectId" value="<%=projectId%>">
                        </div>
                        <div class="form-group">
                            <label for="longitude">Longitude</label>
                            <input type="number" placeholder="0" id="longitude" required name="longitude" readonly>
                            <br>
                            <label for="latitude">Latitude</label>
                            <input type="number" placeholder="0" id="latitude" required name="latitude" readonly>
                        </div>
                        <button class="btn btn-success w-100 mt-2" type="submit">Create</button>
                    </form>


